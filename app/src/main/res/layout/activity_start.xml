<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/gradient1">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="150dp"

        android:layout_height="150dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/animborder"
        android:src="@drawable/animate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.john.waveview.WaveView
        android:id="@+id/WaveView"
        android:layout_width="414dp"
        android:layout_height="766dp"
        app:above_wave_color="#000028"
        app:blow_wave_color="#1CB5E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wave_height="large"
        app:wave_hz="fast"
        app:wave_length="large"
        android:scaleY="1">

        <Button
            android:id="@+id/test"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button1"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:text="Lets Go !"
            android:textColor="#ffffff"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="100dp"/>
    </com.john.waveview.WaveView>
    <com.john.waveview.WaveView
        android:id="@+id/WaveView1"
        android:layout_width="414dp"
        android:layout_height="766dp"
        app:above_wave_color="#000028"
        app:blow_wave_color="#1CB5E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wave_height="large"
        app:wave_hz="fast"
        app:wave_length="large">

    </com.john.waveview.WaveView>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Health Supervisor"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>